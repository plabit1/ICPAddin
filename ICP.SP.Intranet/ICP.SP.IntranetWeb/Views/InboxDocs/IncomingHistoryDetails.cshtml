@model ICP.SP.IntranetWeb.ViewModels.MailboxDetailsViewModel

@if (string.IsNullOrEmpty(Model.ErrorMessage) && Model.Details != null)
{
    if (Model.Details.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th width="160px">Asignado a</th>
                    <th width="90px">El día</th>
                    <th width="160px">Por</th>
                    <th width="90px">Para el</th>
                    <th width="80px">Acción</th>
                    <th>Instrucciones</th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Details.Count; i++)
                {
                    <tr>
                        <td>@Model.Details[i].AssignedToName</td>
                        <td>@Model.Details[i].AssignmentDate.ToString("dd/MM/yyyy")</td>
                        <td>@Model.Details[i].AssignedByName</td>
                        <td>@Model.Details[i].DueToDate.ToString("dd/MM/yyyy")</td>
                        <td>@Model.Details[i].AssignmentStatus</td>
                        <td>@Model.Details[i].Annotations</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    <div class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
}